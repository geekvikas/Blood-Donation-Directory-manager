<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/profile_background"
    android:orientation="vertical"
    tools:context=".ProfileFragment">

    <!-- TODO: Update blank fragment layout -->

        <ImageView
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/profilepicture" />

    <TextView
        android:id="@+id/textViewUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="-50dp"
        android:text="_Username_"
        android:textColor="#f9f9f9"
        android:textSize="24dp"
        android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="90dp"
                android:textColor="#f9f9f9"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginTop="0dp"
                android:text="Username\>" />

        <ImageButton
            android:id="@+id/imageButtonUpdateUsername"
            android:layout_marginTop="-45dp"
            android:layout_marginLeft="300dp"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/edit" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#bdbdbd"
        android:layout_marginTop="30dp"
         />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="411dp"
        android:layout_marginTop="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#bdbdbd"
                android:text="Contact Details"
                android:textColor="#000000"
                android:textSize="20dp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/email" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="65dp"
                android:layout_marginTop="-40dp"
                android:text="Email Address"
                android:textColor="#f9f9f9"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textViewEmailAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:text="_EmailAddress_"
                android:textColor="#f9f9f9"
                android:textSize="18dp" />

            <ImageButton
                android:id="@+id/imageButtonUpdateEmail"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginLeft="300dp"
                android:layout_marginTop="-40dp"
                android:src="@drawable/edit" />

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/contact" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="65dp"
                android:layout_marginTop="-40dp"
                android:text="Contact number"
                android:textColor="#f9f9f9"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textViewContact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:text="_Contact_"
                android:textColor="#f9f9f9"
                android:textSize="18dp" />

            <ImageButton
                android:id="@+id/imageButtonUpdateContact"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginLeft="300dp"
                android:layout_marginTop="-40dp"
                android:src="@drawable/edit" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#bdbdbd"
                android:text="Personal Details"
                android:textColor="#000000"
                android:textSize="20dp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/name" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="65dp"
                android:layout_marginTop="-40dp"
                android:text="Name"
                android:textColor="#f9f9f9"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textViewName1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:text="_Name_"
                android:textColor="#f9f9f9"
                android:textSize="18dp" />


            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/dateofbirth" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="65dp"
                android:layout_marginTop="-40dp"
                android:text="Date of Birth"
                android:textColor="#f9f9f9"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textViewDOB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:text="_Date Of Birth_"
                android:textColor="#f9f9f9"
                android:textSize="18dp" />

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/gender" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="65dp"
                android:layout_marginTop="-40dp"
                android:text="Gender"
                android:textColor="#f9f9f9"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textViewGender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:text="_Gender_"
                android:textColor="#f9f9f9"
                android:textSize="18dp" />

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/bloodgroup" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="65dp"
                android:layout_marginTop="-40dp"
                android:text="Blood Group"
                android:textColor="#f9f9f9"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textViewBloodGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:text="_BloodGroup_"
                android:textColor="#f9f9f9"
                android:textSize="18dp" />

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/image_background"
                android:src="@drawable/age" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="65dp"
                android:layout_marginTop="-40dp"
                android:text="Age"
                android:textColor="#f9f9f9"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textViewAge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:text="_Age_"
                android:textColor="#f9f9f9"
                android:textSize="18dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#bdbdbd"
                android:text="Location Details"
                android:textColor="#000000"
                android:textSize="20dp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/address" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="65dp"
                android:layout_marginTop="-40dp"
                android:text="City"
                android:textColor="#f9f9f9"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textViewCity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:text="_City_"
                android:textColor="#f9f9f9"
                android:textSize="18dp" />

            <ImageButton
                android:id="@+id/imageButtonUpdateCity"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginLeft="300dp"
                android:layout_marginTop="-40dp"
                android:src="@drawable/edit" />

            <EditText
                android:id="@+id/editTextSRNO"
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="30dp"
                android:inputType="number"
                android:background="@drawable/edit_text_background"
                android:hint="SRNO"
                android:textAlignment="center" />

            <Button
                android:id="@+id/buttonSRNO"
                android:layout_width="120dp"
                android:layout_height="35dp"
                android:text="Set Profile"
                android:layout_marginLeft="200dp"
                android:layout_marginTop="-40dp"
                android:background="@drawable/button_background1" />

        </LinearLayout>


    </ScrollView>

</LinearLayout>