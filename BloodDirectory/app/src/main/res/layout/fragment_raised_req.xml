<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/raiserequest"
    android:orientation="vertical"
    tools:context=".RaisedReqFragment">

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="33dp"
        android:layout_marginTop="10dp"
        android:text="Blood Group"
        android:textColor="#f9f9f9"
        android:textSize="16sp"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:textAlignment="center"
        android:layout_marginStart="33dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/spinner_background" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textView9"
        android:layout_marginTop="10dp"
        android:layout_marginStart="33dp"
        android:text="Blood Units Required"
        android:textColor="#f9f9f9"
        android:textSize="16sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="313dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textView9"
        android:layout_marginStart="33dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/edit_text_background"
        android:ems="10"
        android:hint="Enter Blood Units"
        android:inputType="number"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textView9"
        android:layout_marginTop="10dp"
        android:layout_marginStart="33dp"
        android:text="Tells us About your condition"
        android:textColor="#f9f9f9"
        android:textSize="16sp"
        android:textStyle="bold" />

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="313dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textView9"
        android:layout_marginTop="5dp"
        android:layout_marginStart="33dp"
        android:background="@drawable/edit_text_background"
        android:text="Is Critical ?" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textView9"
        android:layout_marginTop="10dp"
        android:layout_marginStart="33dp"
        android:text="Name"
        android:textColor="#f9f9f9"
        android:textSize="16sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="313dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textView9"
        android:layout_marginTop="5dp"
        android:layout_marginStart="33dp"
        android:background="@drawable/edit_text_background"
        android:ems="10"
        android:hint="Enter Name"
        android:inputType="textPersonName"
        android:textAlignment="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textView9"
        android:layout_marginTop="10dp"
        android:layout_marginStart="33dp"
        android:text="Contact Number"
        android:textColor="#f9f9f9"
        android:textSize="16sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editText3"
        android:layout_width="313dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textView9"
        android:layout_marginTop="5dp"
        android:layout_marginStart="33dp"
        android:background="@drawable/edit_text_background"
        android:ems="10"
        android:hint="Enter Contact Number"
        android:inputType="text|number"
        android:textAlignment="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textView9"
        android:layout_marginTop="10dp"
        android:layout_marginStart="33dp"
        android:text="Near by Hospital Name"
        android:textColor="#f9f9f9"
        android:textSize="16sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editText4"
        android:layout_width="313dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textView9"
        android:layout_marginTop="5dp"
        android:layout_marginStart="33dp"
        android:background="@drawable/edit_text_background"
        android:ems="10"
        android:hint="Enter Hospital Name"
        android:inputType="textMultiLine" />

    <Button
        android:id="@+id/button"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_marginLeft="100dp"
        android:background="@drawable/button_background2"
        android:text="Submit"
        android:layout_marginTop="30dp"
        />


</LinearLayout>